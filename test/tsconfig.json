{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "noErrorTruncation": true
  },
  "references": [
    {
      "path": "../packages/client"
    },
    {
      "path": "../packages/server"
    }
  ],
  "include": [
    "./src/**/*"
  ]
}
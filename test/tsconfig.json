{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "noErrorTruncation": true,
    "paths": {
      "@cuple/client/*": ["../packages/client/src/*"],
      "@cuple/server/*": ["../packages/server/src/*"],
      "@cuple/client": ["../packages/client/src/index.ts"],
      "@cuple/server": ["../packages/server/src/index.ts"]
    }
  },
  "references": [
    {
      "path": "../packages/client"
    },
    {
      "path": "../packages/server"
    }
  ],
  "include": ["./src/**/*", "../packages/openapi/test/nested"]
}

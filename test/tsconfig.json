{
  "compilerOptions": {
    "declaration": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "noErrorTruncation": true,
    "paths": {
      "@cuple/client/*": ["../packages/client/src/*"],
      "@cuple/server/*": ["../packages/server/src/*"]
    }
  },
  "references": [
    {
      "path": "../packages/client"
    },
    {
      "path": "../packages/server"
    }
  ],
  "include": ["./src/**/*"]
}

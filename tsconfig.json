{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2017",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@cuple/client/*": ["./packages/client/src/*"],
      "@cuple/server/*": ["./packages/server/src/*"]
    }
  },
  "references": [
    { "path": "./packages/client" },
    { "path": "./packages/server" },
    { "path": "./test" }
  ],
  "files": [],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}

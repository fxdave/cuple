{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "ES2017",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "noErrorTruncation": true
  },
  "include": [
    "./src/*"
  ]
}